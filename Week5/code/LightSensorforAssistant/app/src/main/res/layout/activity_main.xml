<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.thompeele.lightsensorforassistant.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/light_intensity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/light_intensity"
            android:textAppearance="@android:style/TextAppearance.Material.Large"/>
    <TextView
            android:text="Light intensity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="200dp"
            tools:layout_editor_absoluteX="122dp" android:id="@+id/light_intensity_label"
            android:textAppearance="@android:style/TextAppearance.Material.Large"/>


</android.support.constraint.ConstraintLayout>
